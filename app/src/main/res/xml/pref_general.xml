<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditTextPreference
        android:key="@string/pref_key"
        android:title="@string/pref_title"
        android:defaultValue="@string/pref_default"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="words"
        android:singleLine="true" />
    <ListPreference
        android:title="@string/pref_unit_title"
        android:key="@string/pref_unit_key"
        android:defaultValue="@string/pref_unit_default"
        android:entries="@array/pref_unit_values"
        android:entryValues="@array/pref_unit_values"></ListPreference>



</PreferenceScreen>
